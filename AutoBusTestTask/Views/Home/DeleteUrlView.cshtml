@model AutoBusTestTask.Models.Url

<h3>Вы уверены что хотите удалить это?</h3>
<div>
    <h4>Url</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Длинный URL
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OriginalUrl)
        </dd>
        <dt class = "col-sm-2">
            Сокращенный URL
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ShortUrl)
        </dd>
        <dt class = "col-sm-2">
            Дата создания
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            Количество переходов
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RedirectCount)
        </dd>
    </dl>
    
    <form asp-action="DeleteUrlView">
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
